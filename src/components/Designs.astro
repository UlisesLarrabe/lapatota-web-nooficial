  },
  {
    src: "/design-2.webp",
    alt: "Logo Doppelfass",
  },
  {
    src: "/design-3.webp",
    alt: "Logo El Jardin De Las Delicias",
  },
  {
    src: "/design-4.webp",
    alt: "Logo Engament",
  },
  {
    src: "/design-5.webp",
    alt: "Logo Geofans",
  },
  {
    src: "/design-6.webp",
    alt: "Logo Lincoln",
  },
  {
    src: "/design-7.webp",
    alt: "Logo La Nube",
  },
  {
    src: "/design-8.webp",
    alt: "Logo babu",
  },
  {
    src: "/design-9.webp",
    alt: "Logo Vail",
  },
  {
    src: "/design-10.webp",
    alt: "Logo Puerto Economico",
  },
  {
    src: "/design-11.webp",
    alt: "Logo Nabhen",
  },
  {
    src: "/design-12.webp",
    alt: "Logo Rinobox",
  },
  {
    src: "/design-13.webp",
    alt: "Logo Tap Craft",
