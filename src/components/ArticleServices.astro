---
interface Props {
  title: string;
  description: string;
  services: string[];
  image: {
    src: string;
    alt: string;
  };
}

const { title, description, services, image } = Astro.props;

const designClass = "bg-design-card  border-[#35A4D0]";
const digitalClass = "bg-digital-card border-[#FF5FC6]";

const designServices = "hover:text-[#FF5FC6] bg-[#FF5FC6] ";
const digitalServices = "hover:text-[#35A4D0] bg-[#35A4D0] ";
---

<article class="h-[500px] w-[500px]">
  <header class="-mb-32 -ml-5">
    <img src={image.src} alt={image.alt} />
  </header>
  <main
    class={` h-full flex justify-center items-center flex-col gap-4 border-b-4 border-t-4 ${title === "Digital" ? digitalClass : designClass}`}
  >
    <p class="max-w-96 text-white font-semibold pt-16">
      {description}
    </p>
    <ul class="flex flex-col gap-3 w-4/5">
      {
        services.map((service) => (
          <li
            class={`${title === "Digital" ? designServices : digitalServices} hover:bg-white p-2 text-white uppercase font-bold text-center rounded-md`}
          >
            {service}
          </li>
        ))
      }
    </ul>
  </main>
</article>
